//
// named.conf
//
// Provided by Red Hat bind package to configure the ISC BIND named(8) DNS
// server as a caching only nameserver (as a localhost DNS resolver only).
//
// See /usr/share/doc/bind*/sample/ for example named configuration files.
//

acl internals { localhost; 172.16.17.0/24; };

options {
//	listen-on port 53 { 127.0.0.1; };
//	listen-on-v6 port 53 { ::1; };
	directory 	"/var/named";
	dump-file 	"/var/named/data/cache_dump.db";
        statistics-file "/var/named/data/named_stats.txt";
        memstatistics-file "/var/named/data/named_mem_stats.txt";
	allow-query { internals; };
	blackhole { 172.16.33.1; };
	recursion yes;
	allow-recursion { localhost; 172.16.17.0/24; };

	dnssec-enable yes;
	dnssec-validation yes;

	/* Path to ISC DLV key */
	bindkeys-file "/etc/named.iscdlv.key";

	managed-keys-directory "/var/named/dynamic";
};

logging {
        channel default_debug {
                file "data/named.run";
                severity dynamic;
        };
};

zone "." IN {
	type hint;
	file "named.ca";
};

zone "masaxyz-labo.com" IN {
	type <%= node['bind9']['zone']['type'] %>;
	file "<%= node['bind9']['zone1']['file'] %>";
	<% case node['bind9']['zone']['type'] %>
	<% when "master" %>
	allow-update { none; };
	allow-transfer { <%= node['bind9']['zone']['allowtransferip'] %> };
	<% when "slave" %>
	masters { <%= node['bind9']['zone']['mastersip'] %> };
	<% end %>
};

zone "17.172.in-addr.arpa" IN {
	type <%= node['bind9']['zone']['type'] %>;
	file "<%= node['bind9']['zone2']['file'] %>";
	<% case node['bind9']['zone']['type'] %>
	<% when "master" %>
	allow-update { none; };
	allow-transfer { <%= node['bind9']['zone']['allowtransferip'] %> };
	<% when "slave" %>
	masters { <%= node['bind9']['zone']['mastersip'] %> };
	<% end %>
};

include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";
